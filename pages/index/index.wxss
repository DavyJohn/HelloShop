/**index.wxss**/
view{
  color:var(--themeColor) ;
}

.swiper_home{
  height: 340rpx;
}

.swiper_image{
  width: 750rpx;
  height: 340rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
/* 首页分类栏 */
.cate_home{
  display:flex;
}
.cate_navigator{
  padding:20rpx;
  flex:1;
}
.cate_home_image{
  width:100%
}
.floor_title {
  width: 100%;
}
.floor_home {
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.floor_home .floor_product_home {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  overflow: hidden;
}
.floor_home .floor_product_home .product_data {
  float: left;
  width: 33.33%;
}
.floor_home .floor_product_home .product_data:nth-last-child(-n+4) {
  height: 27.72711207vw;
  border-left: 2px solid #fff;
}
.floor_home .floor_product_home .product_data:nth-child(2),
.floor_home .floor_product_home .product_data:nth-child(3) {
  border-bottom: 1px solid #fff;
}
.floor_home .floor_product_home .product_data image {
  width: 100%;
  height: 100%;
}
