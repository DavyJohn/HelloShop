/* pages/cart/index.wxss */
page {
  padding-bottom: 90rpx;
}
.add_address {
  padding: 20rpx;
}
.userinfo {
  padding: 20rpx;
  display: flex;
}
.userinfo .user_info {
  flex: 3;
}
.userinfo .phoneNumber {
  flex: 1;
}
.my_address {
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid red;
  border-top: 1rpx solid red;
}
.cart_content .cart_list {
  height: 250rpx;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #000;
}
.cart_content .cart_list .view_check {
  flex: 1;
}
.cart_content .cart_list .view_goods_image {
  flex: 3;
}
.cart_content .cart_list .view_goods_image image {
  width: 80%;
}
.cart_content .cart_list .goods_content {
  justify-content: space-around;
  height: 100%;
  flex: 5;
}
.cart_content .cart_list .goods_content .view_goods_title {
  padding-top: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical ;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: #000;
}
.cart_content .cart_list .goods_content .view_goods_tips {
  padding-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_list .goods_content .view_goods_tips .goods_price {
  color: red;
  font-size: 26rpx;
}
.cart_content .cart_list .goods_content .view_goods_tips .view_goods_num {
  padding-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 40rpx;
}
.cart_content .cart_list .goods_content .view_goods_tips .view_goods_num .add {
  flex: 1;
  text-align: center;
  border: 1rpx solid #ccc;
}
.cart_content .cart_list .goods_content .view_goods_tips .view_goods_num .goods_num {
  flex: 1;
  text-align: center;
}
.cart_content .cart_list .goods_content .view_goods_tips .view_goods_num .reduce {
  flex: 1;
  text-align: center;
  border: 1rpx solid #ccc;
}
.footer_tool {
  border-top: 1rpx solid var(--themeColor);
  padding-left: 20rpx ;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 92rpx;
  background-color: #fff;
  display: flex;
}
.footer_tool .check {
  flex: 2;
}
.footer_tool .all_price {
  flex: 3;
  text-align: right;
}
.footer_tool .all_price .all_price_sett {
  display: flex;
}
.footer_tool .all_price .goods_all_price {
  color: var(--themeColor);
}
.footer_tool .btn_goods_all_price {
  flex: 3;
  background-color: var(--themeColor);
}
